  </delete>
  
  <!-- Inserta un registro en la Base de Datos -->
  <insert id="insert" parameterType="FuncionalidadRol" >
 	<selectKey keyProperty="id" resultType="java.math.BigDecimal" order="BEFORE">	
	       SELECT MOAD_SQ_FURO.NEXTVAL FROM DUAL	
	</selectKey>
