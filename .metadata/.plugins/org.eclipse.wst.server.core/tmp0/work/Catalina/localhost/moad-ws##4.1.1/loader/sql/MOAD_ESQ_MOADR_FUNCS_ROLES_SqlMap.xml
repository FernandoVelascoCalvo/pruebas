  <select id="selectByPrimaryKey" resultMap="FuncionalidadRolResultMap" parameterType="FuncionalidadRol" >
    select ID_FUNCS_ROLES, ID_FUNCIONALIDADES, ID_ROLES
    from MOADR_FUNCS_ROLES
    where ID_FUNCS_ROLES = #{id,jdbcType=DECIMAL}
  </select>
  
  <!-- Borra un registro de la Base de Datos -->
  <delete id="deleteByPrimaryKey" parameterType="FuncionalidadRol" >  
