  <!-- Actualiza todos los campos de un registro en la Base de Datos -->
  <update id="updateByPrimaryKey" parameterType="FuncionalidadRol" > 
    update MOADR_FUNCS_ROLES
    set ID_FUNCIONALIDADES = #{idFuncionalidad,jdbcType=DECIMAL},
      ID_ROLES = #{idRol,jdbcType=DECIMAL}
    where ID_FUNCS_ROLES = #{id,jdbcType=DECIMAL}
  </update>
  
  <!-- Actualiza solo los campos no nulos de un registro en la Base de Datos -->
  <update id="updateByPrimaryKeySelective" parameterType="FuncionalidadRol" >
    update MOADR_FUNCS_ROLES
    <set>
      <if test="idFuncionalidad != null" >
        ID_FUNCIONALIDADES = #{idFuncionalidad,jdbcType=DECIMAL}
      </if>
      <if test="idRol != null" >
        ,ID_ROLES = #{idRol,jdbcType=DECIMAL}
      </if>
    </set>
    where ID_FUNCS_ROLES = #{id}
  </update>
  
  <!-- Borra un registro de la Base de Datos por idRol y por idFuncioalidades -->
  <delete id="revocarFuncionalidad" parameterType="FuncionalidadRol" >  
	    delete from MOADR_FUNCS_ROLES
	    where ID_ROLES = #{idRol}
	    AND ID_FUNCIONALIDADES = #{idFuncionalidad,jdbcType=DECIMAL}
  </delete>
  
